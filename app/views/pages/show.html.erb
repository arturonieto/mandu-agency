<div class="render">
	<div class="jumbotron">
		<%= image_tag(@render.image) %>
	</div>
	<div class="container">
		
		<% if @type == 'exterior' %>
		<%= link_to 'REGRESAR', {controller: 'pages', action: 'see', link: :portafolio, type: :exterior} %>
		<% elsif @type == 'interior' %>
		<%= link_to 'REGRESAR', {controller: 'pages', action: 'see', link: :portafolio, type: :interior} %>
		<% elsif @type == 'foto' %>
		<%= link_to 'REGRESAR', {controller: 'pages', action: 'see', link: :portafolio, type: :foto} %>
		<% elsif @type == 'industrial' %>
		<%= link_to 'REGRESAR', {controller: 'pages', action: 'see', link: :portafolio, type: :industrial} %>
		<% end %>
	</div>
</div>