    <script>

	var getUrlParameter = function getUrlParameter(sParam) {
          var sPageURL = decodeURIComponent(window.location.search.substring(1)),
          sURLVariables = sPageURL.split('&'),
          sParameterName,
          i;

        for (i = 0; i < sURLVariables.length; i++) {
          sParameterName = sURLVariables[i].split('=');

          if (sParameterName[0] === sParam) {
            return sParameterName[1] === undefined ? true : sParameterName[1];
          }
        }
      };
	
	var page = getUrlParameter('link');

	if (page){
		$('.header .nav_bar h1').css('display', 'none');
		$('.header .nav_bar img').css('display', 'block');
	}

	switch(page){
		case 'portafolio':
			$('.header .nav_bar ul a li.portafolio').addClass('active');
		break;
		case 'nosotros':
			$('.header .nav_bar ul a li.nosotros').addClass('active');
		break;
		case 'contacto':
			$('.header .nav_bar ul a li.contacto').addClass('active');
		break;
	}

  var typ = getUrlParameter('type');

  switch(typ){
    case 'interior':
      $('.show a.interior').addClass('active');
    break;
    case 'exterior':
      $('.show a.exterior').addClass('active');
    break;
    case 'foto':
      $('.show a.foto').addClass('active');
    break;
    case 'industrial':
      $('.show a.industrial').addClass('active');
    break;
  }


	</script>

